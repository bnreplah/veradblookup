{
    "manifest_version": 2,
    "name": "Search Extension",
    "version": "1.0",
    "description": "Open a new tab and perform a search.",
    "permissions": ["tabs"],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "background": {
      "page": "background.html"
    }
  }
  